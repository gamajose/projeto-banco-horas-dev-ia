<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">Editar Setor</h1>

    <div class="bg-white p-6 rounded-lg shadow-md border border-gray-200">
        <form action="/admin/setores/<%= setor.id %>/editar" method="POST">
            <div class="space-y-4">
                <div>
                    <label for="nome" class="form-label">Nome do Setor</label>
                    <input type="text" 
                           name="nome" 
                           id="nome" 
                           class="form-input" 
                           value="<%= setor.nome %>" 
                           required>
                </div>
            </div>

            <div class="flex justify-end pt-6 space-x-3 border-t mt-6">
                <a href="/admin/setores" class="btn-secondary">Cancelar</a>
                <button type="submit" class="btn-primary">Salvar Alterações</button>
            </div>
        </form>
    </div>
</div>