<div
    class="hidden lg:flex lg:flex-col lg:w-64 lg:fixed lg:inset-y-0 lg:border-r lg:border-gray-200 lg:pt-5 lg:pb-4 lg:bg-gray-800">
    <div class="flex items-center flex-shrink-0 px-6">
        <h1 class="text-2xl font-bold text-white">Banco de Horas</h1>
    </div>
    <div class="mt-6 h-0 flex-1 flex flex-col overflow-y-auto">
        <nav class="mt-5 flex-1 px-2 space-y-1">

            <a href="/dashboard"
                class="group flex items-center px-2 py-2 text-sm font-medium rounded-md <%= (typeof activePage !== 'undefined' && activePage === 'dashboard') ? 'bg-gray-900 text-white' : 'text-gray-300 hover:bg-gray-700 hover:text-white' %>">
                Dashboard
            </a>

            <a href="/profile/editar"
                class="group flex items-center px-2 py-2 text-sm font-medium rounded-md <%= (typeof activePage !== 'undefined' && activePage === 'profile') ? 'bg-gray-900 text-white' : 'text-gray-300 hover:bg-gray-700 hover:text-white' %>">
                Meu Perfil
            </a>

            <a href="/profile/relatorio"
                class="group flex items-center px-2 py-2 text-sm font-medium rounded-md <%= (typeof activePage !== 'undefined' && activePage === 'meu-relatorio') ? 'bg-gray-900 text-white' : 'text-gray-300 hover:bg-gray-700 hover:text-white' %>">
                Meus Relatórios
            </a>

            <% if (user && user.is_staff) { %>
                <div class="pt-4">
                    <span class="px-2 text-xs font-semibold uppercase tracking-wider text-gray-400">Administração</span>
                    <div class="mt-2 space-y-1">
                        <a href="/admin/colaboradores"
                            class="group flex items-center px-2 py-2 text-sm font-medium rounded-md <%= (typeof activePage !== 'undefined' && activePage === 'colaboradores') ? 'bg-gray-900 text-white' : 'text-gray-300 hover:bg-gray-700 hover:text-white' %>">
                            Colaboradores
                        </a>
                        <a href="/admin/setores"
                            class="group flex items-center px-2 py-2 text-sm font-medium rounded-md <%= (typeof activePage !== 'undefined' && activePage === 'setores') ? 'bg-gray-900 text-white' : 'text-gray-300 hover:bg-gray-700 hover:text-white' %>">
                            Setores
                        </a>
                        <a href="/admin/aprovacoes"
                            class="group flex items-center px-2 py-2 text-sm font-medium rounded-md <%= (typeof activePage !== 'undefined' && activePage === 'aprovacoes') ? 'bg-gray-900 text-white' : 'text-gray-300 hover:bg-gray-700 hover:text-white' %>">
                            Aprovações
                        </a>
                        <a href="/admin/relatorios"
                            class="group flex items-center px-2 py-2 text-sm font-medium rounded-md <%= (typeof activePage !== 'undefined' && activePage === 'relatorios') ? 'bg-gray-900 text-white' : 'text-gray-300 hover:bg-gray-700 hover:text-white' %>">
                            Relatórios
                        </a>
                    </div>
                </div>
                <% } %>
        </nav>
    </div>
</div>