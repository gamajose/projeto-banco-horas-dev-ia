<!DOCTYPE html>
<html lang="pt-BR" class="h-full">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Banco de Horas - Sistema Profissional</title>
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    
    <!-- Styles -->
    <link rel="stylesheet" href="/css/output.css">
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
    
    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>

<body class="h-full bg-gradient-to-br from-red-600 via-red-700 to-red-800 font-sans">
    <div class="min-h-screen flex flex-col justify-center py-12 sm:px-6 lg:px-8">
        <!-- Background Pattern -->
        <div class="absolute inset-0 opacity-10">
            <div class="absolute inset-0" style="background-image: radial-gradient(circle at 25% 25%, white 2px, transparent 2px); background-size: 30px 30px;"></div>
        </div>

        <!-- Header -->
        <div class="relative sm:mx-auto sm:w-full sm:max-w-md">
            <div class="text-center">
                <div class="mx-auto h-20 w-20 bg-white rounded-2xl flex items-center justify-center shadow-xl">
                    <i class="fas fa-clock text-red-600 text-3xl"></i>
                </div>
                <h1 class="mt-6 text-4xl font-bold text-white">
                    Banco de Horas
                </h1>
                <p class="mt-2 text-lg text-red-100">
                    Sistema Profissional de Gestão
                </p>
            </div>
        </div>

        <!-- Login Card -->
        <div class="relative mt-8 sm:mx-auto sm:w-full sm:max-w-md">
            <div class="bg-white py-8 px-6 shadow-2xl rounded-3xl sm:px-10 backdrop-blur-sm border border-white/20">
                <div class="space-y-6">
                    <!-- Welcome Message -->
                    <div class="text-center">
                        <h2 class="text-2xl font-bold text-gray-900 mb-2">Bem-vindo!</h2>
                        <p class="text-sm text-gray-600">
                            Faça login para acessar o sistema de banco de horas
                        </p>
                    </div>

                    <!-- Login Form -->
                    <form class="space-y-6" action="/auth/login" method="POST">
                        <div>
                            <label for="email" class="form-label">
                                <i class="fas fa-envelope text-red-600 mr-2"></i>
                                E-mail
                            </label>
                            <input id="email" 
                                   name="email" 
                                   type="email" 
                                   required 
                                   class="form-input"
                                   placeholder="Seu e-mail corporativo"
                                   value="admin@bancohoras.com">
                        </div>

                        <div>
                            <label for="password" class="form-label">
                                <i class="fas fa-lock text-red-600 mr-2"></i>
                                Senha
                            </label>
                            <input id="password" 
                                   name="password" 
                                   type="password" 
                                   required 
                                   class="form-input"
                                   placeholder="Sua senha"
                                   value="admin123">
                        </div>

                        <div class="flex items-center justify-between">
                            <div class="flex items-center">
                                <input id="remember-me" 
                                       name="remember-me" 
                                       type="checkbox" 
                                       class="h-4 w-4 text-red-600 focus:ring-red-500 border-gray-300 rounded">
                                <label for="remember-me" class="ml-2 text-sm text-gray-700">
                                    Lembrar-me
                                </label>
                            </div>

                            <div class="text-sm">
                                <a href="/auth/forgot-password" class="text-red-600 hover:text-red-700 font-medium">
                                    Esqueceu a senha?
                                </a>
                            </div>
                        </div>

                        <div>
                            <button type="submit" class="btn-primary w-full">
                                <i class="fas fa-sign-in-alt mr-2"></i>
                                Entrar no Sistema
                            </button>
                        </div>
                    </form>

                    <!-- Demo Credentials -->
                    <div class="mt-6 p-4 bg-red-50 rounded-xl border border-red-200">
                        <div class="flex items-start">
                            <div class="flex-shrink-0">
                                <i class="fas fa-info-circle text-red-600 text-lg"></i>
                            </div>
                            <div class="ml-3">
                                <h3 class="text-sm font-medium text-red-800">
                                    Credenciais de Demonstração
                                </h3>
                                <div class="mt-2 text-xs text-red-700">
                                    <p><strong>E-mail:</strong> admin@bancohoras.com</p>
                                    <p><strong>Senha:</strong> admin123</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Features -->
        <div class="relative mt-12 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6 text-center border border-white/20">
                    <div class="w-12 h-12 bg-white rounded-xl flex items-center justify-center mx-auto mb-4">
                        <i class="fas fa-users text-red-600 text-xl"></i>
                    </div>
                    <h3 class="text-lg font-semibold text-white mb-2">Gestão Completa</h3>
                    <p class="text-red-100 text-sm">
                        Controle total de colaboradores, setores e hierarquias organizacionais
                    </p>
                </div>

                <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6 text-center border border-white/20">
                    <div class="w-12 h-12 bg-white rounded-xl flex items-center justify-center mx-auto mb-4">
                        <i class="fas fa-clock text-red-600 text-xl"></i>
                    </div>
                    <h3 class="text-lg font-semibold text-white mb-2">Banco de Horas</h3>
                    <p class="text-red-100 text-sm">
                        Registro preciso de horas trabalhadas com aprovações automáticas
                    </p>
                </div>

                <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6 text-center border border-white/20">
                    <div class="w-12 h-12 bg-white rounded-xl flex items-center justify-center mx-auto mb-4">
                        <i class="fas fa-chart-line text-red-600 text-xl"></i>
                    </div>
                    <h3 class="text-lg font-semibold text-white mb-2">Relatórios</h3>
                    <p class="text-red-100 text-sm">
                        Dashboards e relatórios detalhados para análise e gestão
                    </p>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <div class="relative mt-12 text-center">
            <p class="text-red-100 text-sm">
                © 2024 Banco de Horas - Sistema Profissional. Todos os direitos reservados.
            </p>
        </div>
    </div>

    <script>
        // Auto-fill demo credentials animation
        document.addEventListener('DOMContentLoaded', function() {
            const emailInput = document.getElementById('email');
            const passwordInput = document.getElementById('password');
            
            // Add loading animation to form submission
            const form = document.querySelector('form');
            form.addEventListener('submit', function() {
                const submitBtn = form.querySelector('button[type="submit"]');
                submitBtn.disabled = true;
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Entrando...';
            });
            
            // Add focus effects
            [emailInput, passwordInput].forEach(input => {
                input.addEventListener('focus', function() {
                    this.parentElement.classList.add('ring-2', 'ring-red-500');
                });
                
                input.addEventListener('blur', function() {
                    this.parentElement.classList.remove('ring-2', 'ring-red-500');
                });
            });
        });
    </script>
</body>

</html>